@model Idea1.Models.Topic

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Topic</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label" for="Title">Title</label>
            <input class="form-control" type="text" data-val="true" data-val-required="The Title field is required." id="Title" name="Title" value="" />
            <span class="text-danger field-validation-valid" data-valmsg-for="Title" data-valmsg-replace="true"></span>
        </div>

        <div class="form-group">
            <label class="control-label" for="FirstDate">First Date</label>
            <input class="form-control" type="datetime-local" data-val="true" data-val-required="The FirstDate field is required." id="FirstDate" name="FirstDate" value="" />
            <span class="text-danger field-validation-valid" data-valmsg-for="FirstDate" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group">
            <label class="control-label" for="LastDate">Last Date</label>
            <input class="form-control" type="datetime-local" data-val="true" data-val-required="The LastDate field is required." id="LastDate" name="LastDate" value="" />
            <span class="text-danger field-validation-valid" data-valmsg-for="LastDate" data-valmsg-replace="true"></span>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}